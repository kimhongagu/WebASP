@page
@model BTTH03.Pages.Students.DetailsModel

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Student</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Student.Code)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Student.Code)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Student.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Student.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Student.Birth)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Student.Birth)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Student.Email)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Student.Email)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Student.Class)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Student.Class.Title)
		</dd>
		<dt class="col-sm-2">
			Kết quả
		</dt>
		<dd class="col-sm-10">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Môn học</th>
						<th scope="col">Kết quả</th>
					</tr>
				</thead>
				<tbody>
					@{
						int count = 1;
					}
					@foreach (var enrollment in Model.Student.Enrollments)
					{
						<tr>
							<th scope="row">@count</th>
							<td>Môn học: @enrollment.Course.Title</td>
							<td>Điểm: @enrollment.Grade</td>
						</tr>
						count++;
					}
				</tbody>
			</table>
		</dd>
	</dl>
</div>
<div>
	<a asp-page="./Edit" asp-route-id="@Model.Student?.StudentID">Edit</a> |
	<a asp-page="./Index">Back to List</a>
</div>
